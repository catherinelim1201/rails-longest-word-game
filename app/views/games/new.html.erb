<div class="banner d-flex justify-content-center">
  <div class="container bg-primary-subtle text-emphasis-primary border border-5 rounded-pill m-5 p-5 text-center">
    <h1>DES CHIFFRES ET DES LETTRES</h1>

    <p class="fs-3 py-3">Guess a word</p>
    <div class="fs.2">
      <% @letters.each do |letter| %>
        <button class="btn btn-secondary border border-danger-subtle p-3 mb-2 bg-secondary text-white m-3"> <%=  letter %>  </button>
      <% end %>
    </div>

    <form action="/score" method="get" data-turbo="false" class="mt-3">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <br>
      <br>
      <%# (name = answer) --> this will be the returned word from player, the word answer must be the same as the one in params%>
      <input type="text" name="answer" placeholder="Guess a word" value="<%= params[:score] %>">
      <input type="submit" value="Play" class="btn btn-secondary mx-3">
    </form>
  </div>
</div>



